@model RegisterVM

@{
    ViewData["Title"] = "SignUp";
}

<section id="register mb-5" style="padding-bottom:120px">
    <div class="container mt-5">
        <h1 class="text-center">Sign Up</h1>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="register-form w-50 m-auto mb-5" style="background-color:cornflowerblue;padding:30px;box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;border-radius:30px">
            <form method="post" asp-action="SignUp">
                <div class="form-group">
                    <label>Email address</label>
                    <input asp-for="Email" type="text" class="form-control">
                    <span asp-validation-for="Email"  class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label>Full name</label>
                    <input asp-for="FullName" class="form-control">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label>Confirm password</label>
                    <input asp-for="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="register-btn d-flex justify-content-lg-center">
                    <button type="submit" class="btn btn-success mt-3">Sign up</button>
                </div>
            </form>
        </div>
    </div>
</section>

